<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#393E46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/teamManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:textSize="21dp"
                android:textColor="#393E46"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/activity_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="활동 지역 : "
                    android:textSize="11dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="15dp"
                    android:textColor="#393E46"/>
                <TextView
                    android:id="@+id/activity_region_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:hint="서울"
                    android:paddingBottom="15dp"
                    android:textColor="#393E46"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="카테고리 : "
                android:textSize="12dp"
                android:textColor="#393E46"/>
            <TextView
                android:id="@+id/categoryfield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:textSize="12dp"
                android:hint="축구"
                android:textColor="#393E46"/>
        </LinearLayout>

        <Button
            android:id="@+id/joinRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:text="가입 신청"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:textStyle="bold"
            android:background="@drawable/button_radius" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#393E46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teamManagement"/>
</androidx.constraintlayout.widget.ConstraintLayout>

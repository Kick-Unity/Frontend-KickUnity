<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FrameLayout: 상단 컨텐츠를 위한 영역 -->
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_option_1"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginTop="690dp"
            android:layout_marginStart="80dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀 만들기"
                android:padding="8dp"
                android:textColor="#00ADB5"
                android:textStyle="bold"
                android:gravity="center"
            android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_option_2"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginTop="750dp"
            android:layout_marginStart="80dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀 검색하기"
                android:padding="8dp"
                android:textColor="#00ADB5"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- BottomNavigationView: 화면 하단 고정 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#393E46"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/main_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="#9A9BB1"
        app:itemTextColor="#9A9BB1" >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            app:srcCompat="@drawable/ic_close"
            android:backgroundTint="#EEEEEE" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <!-- FloatingActionButton: 하단 우측에 위치 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#393E46"
        android:src="@drawable/pencil_svgrepo_com"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/home_kickunityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="KICKUNITY"
        android:textSize="25dp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bell"
        android:layout_marginRight="15dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/searchimage"
        android:layout_marginRight="55dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 공지사항 공간 -->
    <TextView
        android:id="@+id/noticeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:text="공지사항"
        android:textSize="20dp"
        android:textColor="#393E46"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/home_kickunityText"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/hr3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#393E46"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/noticeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/noticeScrollView"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/hr3"
        app:layout_constraintStart_toStartOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/noticeContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여기에 공지사항 내용이 표시됩니다.  예: 다음 주 토요일에 이벤트가 있습니다."
                android:textSize="14sp"
                android:padding="10dp"
                android:background="#f9f9f9"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/noticeContent3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여기에 공지사항 내용이 표시됩니다.  예: 다음 주 토요일에 이벤트가 있습니다."
                android:textSize="14sp"
                android:padding="10dp"
                android:background="#f9f9f9"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/noticeContent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#f9f9f9"
                android:padding="10dp"
                android:text="여기에 공지사항 내용이 표시됩니다.  예: 다음 주 토요일에 이벤트가 있습니다."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noticeContent4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여기에 공지사항 내용이 표시됩니다.  예: 다음 주 토요일에 이벤트가 있습니다."
                android:textSize="14sp"
                android:padding="10dp"
                android:background="#f9f9f9"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/noticeContent5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여기에 공지사항 내용이 표시됩니다.  예: 다음 주 토요일에 이벤트가 있습니다."
                android:textSize="14sp"
                android:padding="10dp"
                android:background="#f9f9f9"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/noticeContent6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여기에 공지사항 내용이 표시됩니다.  예: 다음 주 토요일에 이벤트가 있습니다."
                android:textSize="14sp"
                android:padding="10dp"
                android:background="#f9f9f9"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/noticeContent7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여기에 공지사항 내용이 표시됩니다.  예: 다음 주 토요일에 이벤트가 있습니다."
                android:textSize="14sp"
                android:padding="10dp"
                android:background="#f9f9f9"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/hr1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#393E46"
        app:layout_constraintTop_toBottomOf="@+id/noticeScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/mainboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start|center_vertical"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/hr1"
        android:text="전체 게시판"
        android:textColor="#393E46"
        android:textSize="15dp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <Button
        android:id="@+id/soccerBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start|center_vertical"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/mainboard"
        android:text="축구 게시판"
        android:textColor="#393E46"
        android:textSize="15dp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <Button
        android:id="@+id/basketballBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start|center_vertical"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/soccerBoard"
        android:text="농구 게시판"
        android:textColor="#393E46"
        android:textSize="15dp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <Button
        android:id="@+id/baseballBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start|center_vertical"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/basketballBoard"
        android:text="야구 게시판"
        android:textColor="#393E46"
        android:textSize="15dp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <Button
        android:id="@+id/otherSportsBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start|center_vertical"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/baseballBoard"
        android:text="기타 종목 게시판"
        android:textColor="#393E46"
        android:textSize="15dp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <View
        android:id="@+id/hr2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#393E46"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/otherSportsBoard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/myPostContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start|center_vertical"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/hr2"
        android:text="내가 쓴 글"
        android:textColor="#393E46"
        android:textSize="15dp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>



</androidx.constraintlayout.widget.ConstraintLayout>
